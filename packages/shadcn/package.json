{
  "name": "@better-auth-ui/shadcn",
  "version": "0.0.0-alpha.0",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias && bun styles",
    "dev": "bun styles && concurrently 'tsc -w' 'tsc-alias -w'",
    "styles": "cpy src/styles.css dist/ --flat",
    "test": "vitest",
    "registry:build": "shadcn build --output ../../apps/docs/public/r"
  },
  "files": [
    "src",
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist/core.js",
      "types": "./dist/core.d.ts"
    },
    "./styles": "./dist/styles.css"
  },
  "devDependencies": {
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^19.2.7",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/browser-playwright": "^4.0.15",
    "better-auth": "^1.4.5",
    "concurrently": "^9.2.1",
    "cpy-cli": "^6.0.0",
    "playwright": "^1.57.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "sonner": "^2.0.7",
    "tsc-alias": "^1.8.16",
    "vite": "^7.2.7",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@better-auth-ui/core": "workspace:*",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@tanstack/react-form": "^1.27.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.556.0",
    "shadcn": "^3.5.1",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0"
  },
  "peerDependencies": {
    "@better-auth-ui/react": "workspace:*",
    "better-auth": ">=1.4.2",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "sonner": ">=2.0.0"
  }
}
